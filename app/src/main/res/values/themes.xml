<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.CryptoVista" parent="Theme.Material3.DayNight.NoActionBar">

        <item name="colorPrimary">@color/teal_light</item>
        <item name="colorOnPrimary">@color/white</item>

        <item name="colorPrimaryVariant">@color/teal_light</item>

        <item name="colorPrimaryDark">@color/teal</item>

        <item name="colorAccent">@color/yellow</item>
        <item name="backgroundColor">@color/teal</item>

        <item name="colorSecondary">@color/teal</item>
        <item name="colorOnSecondary">@color/white</item>

        <item name="colorOnTertiary">@color/teal_very_light</item>
        <item name="colorOnTertiaryFixed">@color/white</item>

        <item name="android:textColorSecondary">@color/white</item>

        <item name="fontFamily">@font/font_reg</item>

        <item name="android:statusBarColor">?attr/colorPrimary</item>

        <item name="android:windowBackground">@color/teal</item>

    </style>

    <style name="Theme.CryptoVista" parent="Base.Theme.CryptoVista" />

    <style name="toolbar" parent="ThemeOverlay.Material3.Toolbar.Surface">
        <item name="titleTextColor">?attr/colorOnPrimary</item>
        <item name="iconTint">?attr/colorOnPrimary</item>
        <item name="navigationIconTint">?attr/colorOnPrimary</item>
        <item name="android:background">?attr/colorPrimaryVariant</item>
    </style>

    <style name="bottom_navigation" parent="Widget.Material3.BottomNavigationView">
        <item name="backgroundTint">?attr/colorPrimary</item>
        <item name="itemIconTint">@color/bottom_nav_item_color</item>
        <item name="itemActiveIndicatorStyle">@style/active_indicator</item>
        <item name="labelVisibilityMode">unlabeled</item>
    </style>

    <style name="active_indicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">?attr/colorOnPrimary</item>
    </style>

    <style name="toolbar_title" parent="MaterialAlertDialog.Material3.Title.Text">
        <item name="android:textSize">28sp</item>
        <item name="fontFamily">@font/font_title</item>
    </style>

    <style name="text_style_very_small" parent="TextAppearance.Material3.BodySmall">
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name="text_style_medium" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="text_style_large" parent="TextAppearance.Material3.BodyLarge">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="text_style_very_large" parent="TextAppearance.Material3.BodyLarge">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">32sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="card_view" parent="Widget.Material3.CardView.Elevated">
        <item name="cardBackgroundColor">?attr/colorPrimary</item>
    </style>

</resources>